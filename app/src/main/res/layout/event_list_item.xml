<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/alarmIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:cropToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/locationIcon"
            app:layout_constraintStart_toStartOf="@+id/eventDescription"
            app:layout_constraintTop_toBottomOf="@+id/eventDescription"
            app:srcCompat="@drawable/ic_alarm"
            android:contentDescription="@string/alarmIconContentDesc" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/alarmIcon"
            app:srcCompat="@drawable/ic_location"
            android:contentDescription="@string/locationIconContentDesc" />

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/timeLabel"
            app:layout_constraintBottom_toBottomOf="@+id/alarmIcon"
            app:layout_constraintStart_toEndOf="@+id/alarmIcon"
            app:layout_constraintTop_toTopOf="@+id/alarmIcon" />

        <TextView
            android:id="@+id/timeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timePlaceholder"
            app:layout_constraintBottom_toBottomOf="@+id/timeLabel"
            app:layout_constraintStart_toEndOf="@+id/timeLabel"
            app:layout_constraintTop_toTopOf="@+id/timeLabel" />

        <TextView
            android:id="@+id/locationInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locationPlaceholder"
            app:layout_constraintBottom_toBottomOf="@+id/locationIcon"
            app:layout_constraintStart_toStartOf="@+id/timeLabel"
            app:layout_constraintTop_toTopOf="@+id/locationIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/dateLabel"
            app:layout_constraintBottom_toBottomOf="@+id/timeInput"
            app:layout_constraintStart_toEndOf="@+id/timeInput"
            app:layout_constraintTop_toTopOf="@+id/timeInput"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datePlaceholder"
            app:layout_constraintBottom_toBottomOf="@+id/dateLabel"
            app:layout_constraintStart_toEndOf="@+id/dateLabel"
            app:layout_constraintTop_toTopOf="@+id/dateLabel" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/locationIcon"
            app:layout_constraintEnd_toEndOf="@+id/dateInput"
            app:layout_constraintTop_toTopOf="@+id/locationIcon"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_delete_forever"
            android:contentDescription="@string/deleteIconContentDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>